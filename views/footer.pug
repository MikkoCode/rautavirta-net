//- Integrated Projects Modals
.container
    h2.text-uppercase.text-center.text-secondary Projects
    h3.text-center.text-info.mb-5
        i.fa-solid.fa-code.text-primary
        |  My Projects Released to the Public
    .divider-custom
    hr.star-dark.mb-5

    mixin projectBlock(imgSrc, modalId)
        .col-md-6.col-lg-4
            a.d-block.mx-auto.portfolio-item(href=modalId data-bs-toggle='modal')
                .d-flex.portfolio-item-caption.position-absolute.h-100.w-100
                    .text-center.text-white.my-auto.portfolio-item-caption-content.w-100
                        | + Project Name
                img.img-fluid(src=imgSrc)

    .row
        +projectBlock('/img/portfolio/cabin.png?h=5bde47039f23de84a7748bee08793ac3', '#portfolio-modal-1')
        +projectBlock('/img/portfolio/cake.png?h=4b5723e2b00006ef3a25df097c7187dd', '#portfolio-modal-2')
        +projectBlock('/img/portfolio/circus.png?h=984b4ff719255fcbf2e01164905ebb90', '#portfolio-modal-3')
